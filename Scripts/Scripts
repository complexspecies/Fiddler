class ContributionLimitsViewSet(OnboardedUserAPI, APIView):
    @extend_schema(
        parameters=[parameters.contribution_limits_request_parameter],
        responses=responses.contribution_limits_response,
        tags=["Shares"],
    )
    def get(self, request):
        serializer = ContributionLimitsRequestParamSerializer(
            data=request.query_params, context={"request": request}
        )
        serializer.is_valid(raise_exception=True)
